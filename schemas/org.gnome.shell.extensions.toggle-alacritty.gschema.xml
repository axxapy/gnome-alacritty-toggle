<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
	<schema id="org.gnome.shell.extensions.toggle-alacritty" path="/org/gnome/shell/extensions/toggle-alacritty/">
		<key name="toggle-key" type="as">
			<default><![CDATA[['<Alt>Z']]]></default>
			<summary>Toggle key</summary>
		</key>
		<key name="hide-on-overview" type="b">
			<default>true</default>
			<summary>Hide on overview screen</summary>
			<description>Hides alacritty on workspaces overview screen</description>
		</key>
		<key name="command" type="s">
			<default>'/usr/bin/alacritty'</default>
			<summary>Set the alacritty command</summary>
		</key>
	</schema>
</schemalist>
